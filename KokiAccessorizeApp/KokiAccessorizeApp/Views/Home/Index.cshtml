@model WepApp.WebPagesModels.HomePage

@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_MasterLayout/_WebPages.cshtml";
}



@foreach (var item in Model.Categories)
{

    <div class="col-lg-3 col-md-6">
        <div class="social-box twitter">
            <i class="fa fa-twitter">
               


            </i>
            <ul>
                <li>
                    <sctrong>
                        <a href="@Url.Action("index","Products", new { CategoryID = item.CategoryID })">
                            <span>@item.CategoryName</span>
                        </a>
                    </sctrong>
                </li>
                <li>
                    <sctrong>
                        <a href="@Url.Action("index","Products", new { CategoryID = item.CategoryID })">
                            <span class="count">@item.ProductCount</span>
                            <span>Product</span>
                            </a>
                    </sctrong>
                </li>
            </ul>
        </div>
        <!--/social-box-->
    </div>


}

<hr />



<div class="col-md-12">
    <section class="card">
        <div class="twt-feed blue-bg">
            <div class="corner-ribon black-ribon">
                <i class="fa fa-twitter"></i>
            </div>
            <div class="fa fa-twitter wtt-mark"></div>

            <div class="media">
                <a href="#">
                    <img class="align-self-center rounded-circle mr-3" style="width:85px; height:85px;" alt="" src="~/Theme/images/female avatar.png">
                </a>
                <div class="media-body">
                    <h2 class="text-white display-6">@_App.Current.User.FullName</h2>
                    <p class="text-light">Project Manager</p>
                </div>
            </div>
        </div>
        <div class="weather-category twt-category">
            <ul>

                @foreach (var item in Model.Orders)
                {

                    <li>
                        <h5>@item.OrdersCount</h5>
                        <a href="@Url.Action("Ordersfilter", "orders", new { id = item.StatusID })">
                            @item.OrderSatuesNAme
                        </a>
                    </li>


                }



               
            </ul>
        </div>
       
    </section>
</div>


