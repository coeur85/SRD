@model ICollection<KokiDB.Order>




<table class="table table-striped table-bordered dataTable">
    <thead>
        <tr>
            <th>#</th>
            <th>Customer Name</th>
            <th>Date</th>
            
            <th>Status</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                
                <td>
                    <a href="@Url.Action("Details","Orders", new { id = item.OrderID })" class="btn-link">
                       #@item.OrderID
                    </a>
                </td>
                <td>@item.Customer.UserInfo.FullName</td>
                <td>@item.OrderDate</td>
                <td>@item.OrderStatu.StatusName</td>
                
            </tr>
        }
    </tbody>
</table>

