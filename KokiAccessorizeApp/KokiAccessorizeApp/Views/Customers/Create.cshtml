@model KokiDB.Customer

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_MasterLayout/_WebPages.cshtml";
    ViewBag.PageName = "New Customer";
    ViewBag.formMode = "create";
}



@using (Html.BeginForm((string)ViewBag.Contoler, "Customers", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()


<div class="card">
    <div class="card-header">
        <strong>Add Customer Data</strong>
    </div>
    <div class="card-body">
        @Html.EditorForModel()

    </div>
    <div class="card-footer">


        <button type="submit" class="btn btn-success btn-sm">
            <i class="fa fa-save"></i> Save
        </button>


        <a class="btn btn-dark btn-sm" href="@Url.Action("index", "Customers")">
            <i class="fa fa-reply-all"></i> All Customers
        </a>

      

    </div>
</div>

}