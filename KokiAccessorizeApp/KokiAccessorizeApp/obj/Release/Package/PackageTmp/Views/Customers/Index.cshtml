@model ICollection<KokiDB.Customer>

@{
    ViewBag.Title = "All Customers";
    Layout = "~/Views/Shared/_MasterLayout/_WebPages.cshtml";

}


<div class="card">
    <div class="card-header">
        <strong>Customers</strong>
    </div>
    <div class="card-body">



        <table class="table table-striped table-bordered dataTable">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Customer Name</th>
                    <th>Orders Count</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                        <td>
                            <a href="@Url.Action("Details","Customers", new { id = item.CustomerID })" class="btn-link">
                                #@item.CustomerID
                            </a>
                        </td>
                        <td>
                            <a href="@Url.Action("Details","Customers", new { id = item.CustomerID })" class="btn-link">
                                @item.UserInfo.FullName
                            </a>
                        </td>

                        <td>@item.Orders.Count</td>
                        
                        <td class="text-center">
                            <div class="col-md-4">
                                <a href="@Url.Action("Edit","Customers", new {  id = item.CustomerID})" class="btn-outline-warning">
                                    <i class="fa fa-pencil"></i>
                                </a>
                            </div>
                            <div class="col-md-4">
                                <a href="@Url.Action("Details","Customers", new {  id = item.CustomerID})" class="btn-outline-info">
                                    <i class="fa fa-info-circle"></i>

                                </a>
                            </div>
                            <div class="col-md-4   ">
                                <a href="@Url.Action("Delete","Customers", new {  id = item.CustomerID}) " class="btn-outline-danger">
                                    <i class="fa fa-trash-o"></i>

                                </a>
                            </div>
                        </td>

                    </tr>
                }
            </tbody>
        </table>



    </div>
</div>
