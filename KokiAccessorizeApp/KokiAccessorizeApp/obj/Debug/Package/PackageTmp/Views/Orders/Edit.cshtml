
@model KokiDB.Order

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_MasterLayout/_WebPages.cshtml";
    ViewBag.PageName = "Edit Order #" + Model.OrderID;
}

@using (Html.BeginForm((string)ViewBag.Contoler, "Orders", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="card">
        <div class="card-header">
            <strong>Order information</strong>
        </div>
        <div class="card-body">
            <div class="row form-group">
                <div class="col col-md-3">
                    @Html.LabelFor(model => model.OrderID, "Order Number", new { @class = " form-control-label" })
                </div>
                <div class="col-12 col-md-9">
                    @Html.TextBoxFor(model => model.OrderID, new { @class = "form-control", @readonly="readonly"})
                </div>
            </div>
            <div class="row form-group">
                <div class="col col-md-3">
                    @Html.LabelFor(model => model.OrderID, "Order Date", new { @class = " form-control-label" })
                </div>
                <div class="col-12 col-md-9">
                    @Html.TextBoxFor(model => model.OrderDate, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>
            <div class="row form-group">
                <div class="col col-md-3">
                    @Html.LabelFor(model => model.OrderID, "Customer", new { @class = " form-control-label" })
                </div>
                <div class="col-12 col-md-9">

                    @Html.DropDownList("CustomerID", null, htmlAttributes: new { @class = "form-control standardSelect" })


                </div>
            </div>

        </div>

        <div class="card-footer">
            <div class="col-md-10"></div>
            <div class="col-md-1">
                <button type="submit" class="btn btn-success btn-sm">
                    <i class="fa fa-forward"></i> Change order items
                </button>

            </div>
            <div class="col-md-1">
                <a class="btn btn-dark btn-sm" href="@Url.Action("index", "Orders", new { id = Model.OrderID })">
                    <i class="fa fa-reply-all"></i> Back to all orders
                </a>

            </div>


        </div>

    </div>
}


