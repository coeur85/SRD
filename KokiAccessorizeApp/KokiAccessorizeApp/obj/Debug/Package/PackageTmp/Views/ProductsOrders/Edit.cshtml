@model KokiDB.ProductsOrder

@{
    ViewBag.Title = "Edit item for order #" + Model.ProductID;
    Layout = "~/Views/Shared/_MasterLayout/_WebPages.cshtml";
    ViewBag.PgaeName = "Edit item " + Model.Product.FullName;
    ViewBag.formMode = "edit";


}




@using (Html.BeginForm((string)ViewBag.Contoler, "ProductsOrders", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    @Html.AntiForgeryToken()
    <div class="card">
        <div class="card-header">
            <strong>
                <b>Customer Name: </b>  @Model.Order.Customer.UserInfo.FullName
            </strong>
        </div>

        @Html.EditorForModel()


        <div class="card-footer">
            <button type="submit" class="btn btn-success btn-sm">
                <i class="fa fa-save"></i> Save
            </button>

            <a class="btn btn-dark btn-sm" href="@Url.Action("index", "ProductsOrders", new { id = Model.OrderID })">
                <i class="fa fa-reply-all"></i> Back to all itmes
            </a>


        </div>

    </div>

}


