@model KokiDB.ProductsOrder

@{
    ViewBag.Title = "Delete item from order #" +  Model.OrderID;
    Layout = "~/Views/Shared/_MasterLayout/_WebPages.cshtml";
    ViewBag.PgaeName = Model.Product.ProductName ;
    ViewBag.formMode = "details";


}




@using (Html.BeginForm((string)ViewBag.Contoler, "ProductsOrders", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    @Html.AntiForgeryToken()
    <div class="card">
        <div class="card-header">
            <strong>
                <b>Are your suer?</b>
            </strong>
        </div>

        @Html.EditorForModel()


        <div class="card-footer">
            <button type="submit" class="btn btn-danger btn-sm">
                <i class="fa fa-trash-o"></i> Delete
            </button>

            <a class="btn btn-dark btn-sm" href="@Url.Action("index", "ProductsOrders", new { id = Model.OrderID })">
                <i class="fa fa-reply-all"></i> Back to all itmes
            </a>


        </div>

    </div>

}
